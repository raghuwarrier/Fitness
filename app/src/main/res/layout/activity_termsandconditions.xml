<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fitness.com.fitness.TermsAndConditionsActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include>

    <TextView android:text="@string/termsandconditions" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/termsandconditions"
        android:minHeight="80dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Toggle to Agree" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/toggletext"
        android:gravity="center_horizontal"
        android:layout_below="@+id/termsandconditions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/abc_dialog_padding_top_material"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColorLink="@color/primary_dark_material_dark" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggletext"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toggle_off"
        android:textOn="Agree"
        android:textOff="Disagree"
        android:onClick="toggled"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        />


