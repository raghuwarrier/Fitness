<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fitness.com.fitness.TermsAndConditionsActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include>

    <TextView android:text="@string/termsandconditions" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/termsandconditions"
        android:minHeight="80dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termsandconditions"
        android:orientation="vertical">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree"
        android:id="@+id/agree"
        android:layout_centerVertical="true"

        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I disagree"
        android:id="@+id/disagree"
        android:layout_below="@+id/agree"
        android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <com.google.android.gms.common.SignInButton android:id="@+id/plus_sign_in_button"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        />

    <!-- <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/continuebutton"
        android:background="@drawable/gradient_button"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"

        /> -->




</RelativeLayout>
