<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fitness.com.fitness.TermsAndConditionsActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include>

    <TextView android:text="@string/termsandconditions" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/termsandconditions"
        android:minHeight="80dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Agree to proceed" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/toggletext"
        android:gravity="center_horizontal"
        android:layout_below="@+id/termsandconditions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/abc_dialog_padding_top_material"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColorLink="@color/primary_dark_material_dark" />

    <Switch android:id="@+id/swtch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Agree"
        android:textOff="Disagree"
        android:layout_below="@id/toggletext"
        android:switchPadding="1dp"
        android:onClick="togglestatehandler"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/customtrack"
        android:thumbTextPadding="2dp"
        android:textStyle="bold|italic"
        android:typeface="sans"/>


