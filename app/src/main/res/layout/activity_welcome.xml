<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_gravity="center_horizontal"
    tools:context="fitness.com.fitness.WelcomeActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include>

    <TextView android:text="@string/welcome_text" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeMessage"
        android:minHeight="45dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/notification_bar_new"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcomeMessage" />

    <TextView android:text="@string/welcome_text2" android:layout_width="wrap_content"
        style="@style/welcomeText"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:background="@drawable/gradient_button"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
         />




</RelativeLayout>
